<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:padding="16dp"
    android:paddingTop="24dp">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/name_card"
        android:name="com.cs4530.a4lyfe.Intake.UserCreationCards.NameCardFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        tools:layout="@layout/fragment_name_card" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/birthday_card"
        android:name="com.cs4530.a4lyfe.Intake.UserCreationCards.BirthdayCardFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_card"
        tools:layout="@layout/fragment_birthday_card" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/sex_card"
        android:name="com.cs4530.a4lyfe.Intake.UserCreationCards.SexCardFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/birthday_card"
        tools:layout="@layout/fragment_sex_card"

        />


</RelativeLayout>
